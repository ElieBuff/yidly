<style>
	body{
		padding-top:40px;
	}
	form{
		padding: 15px;
		margin: 0 auto;				
	}
	.jumbotron-signin{

		max-width: 450px;
		margin: 0 auto;
	}
	form input#emailInput {
		margin-bottom: -1px;
		border-bottom-left-radius: 0;
		border-bottom-right-radius: 0;
	}
	form input#passwordConfirmationInput, form input#passwordInput {
		margin-top: -1px;
		border-top-left-radius: 0;
		border-top-right-radius: 0;
	}
	.form-group{
		padding:20px 0 10px 0;
	}
	.form-group label{
		font-size: 14px;
		font-weight: normal;
	}
	.form-group #remember_div{
		margin-top:20px;
	}
	.form-group #remember_label{
		margin-left:20px;	
	}
	hr{
		border-top: 1px solid #ccc;
		margin-left: 20px;
		margin-right: 20px;
	}
</style>
<div id="wrapper" class="container">
	<div class="jumbotron jumbotron-signin">
		<div class="container">
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<h3>Please sign in</h3>
				<%= devise_error_messages! %>
				<div class="form-group">
					<%= f.email_field :email, :required => false, :class =>"form-control input-lg", :id =>"emailInput", :autofocus => true, :placeholder =>"Enter email" %>

					<%= f.password_field :password, :required => false, :class =>"form-control input-lg", :id =>"passwordInput", :placeholder =>"Password" %>

					<div id="remember_div">
						<%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
						<span id="remember_label"><strong>Remember Me</strong></span>
					</div>

				</div>
   				<button type="submit" class="btn btn-primary btn-lg btn-block">
					Log In
				</button>

				<hr/>

				<div>
					<%- resource_class.omniauth_providers.each do |provider| %>
						<a class="btn btn-default btn-lg btn-block" 
							href="<%= omniauth_authorize_path(resource_name, provider) %>">
							<span class="glyphicon">
								<img src="http://www.thedrum.com/uploads/styles/home_page_featured/public/drum_basic_article/138256/main_images/Facebook-logo-1817834_png.jpg" class="img-rounded" style="width:40px;">
							</span> 
							Log in with Facebook
						</a>
					<% end -%>
				</div>

			<% end %>
		</div>
	</div>
</div>
